#!name=Netflix GraphQL 拦截
#!desc=拦截并修改 Netflix GraphQL 响应，移除 clcsInterstitialLolomo 和 clcsInterstitialPlaybackV2 字段

[Script]
Netflix GraphQL 拦截 = type=http-response,pattern=.*web\.prod\.cloud\.netflix\.com.*graphql.*,requires-body=1,max-size=0,script=function shouldBlock(json) { if (!json || !json.data) { return false; } const hasLolomo = json.data.hasOwnProperty('clcsInterstitialLolomo'); const hasPlayback = json.data.hasOwnProperty('clcsInterstitialPlaybackV2'); if (hasLolomo || hasPlayback) { console.log("[Surge] 检测到字段 - clcsInterstitialLolomo: " + hasLolomo + ", clcsInterstitialPlaybackV2: " + hasPlayback); return true; } return false; } let body = $response.body; let url = $request.url; console.log("[Surge] 拦截到请求: " + url); console.log("[Surge] 响应体长度: " + (body ? body.length : 0)); if (!body || body.length === 0) { console.log("[Surge] 响应体为空，直接返回"); $done({}); } else { try { const json = JSON.parse(body); console.log("[Surge] JSON 解析成功，检查字段..."); if (shouldBlock(json)) { console.log("[Surge] 检测到需要拦截的字段，返回空对象"); let headers = {}; if ($response.headers) { for (let key in $response.headers) { let lowerKey = key.toLowerCase(); if (lowerKey !== 'content-encoding' && lowerKey !== 'content-length') { headers[key] = $response.headers[key]; } } } headers["Content-Type"] = "application/json"; headers["Content-Length"] = "2"; $done({ body: "{}", status: 200, headers: headers }); } else { console.log("[Surge] 未检测到需要拦截的字段，正常返回"); $done({}); } } catch (e) { console.warn("[Surge] 响应解析错误:", e); console.warn("[Surge] 响应体前100字符:", body ? body.substring(0, 100) : "null"); $done({}); } }

[MITM]
hostname = web.prod.cloud.netflix.com

